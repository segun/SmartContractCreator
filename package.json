{
  "name": "smartcontractcreator",
  "version": "1.0.0",
  "description": "Automate Smart Contract Creation using Web3.js",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "nodemon index.js",
    "compile": "waffle .waffle.json",
    "clean": "rimraf ./contracts/assets/build",
    "build_assets": "rm -rf ./contracts/assets/output && /usr/local/bin/solcjs --base-path ./contracts/assets -o ./contracts/assets/output --bin --abi --optimize ./contracts/assets/AssetManager.sol ./contracts/NGNC.sol"
  },
  "author": "Akintayo Olusegun",
  "license": "ISC",
  "dependencies": {
    "@truffle/hdwallet-provider": "^1.1.0",
    "solc": "^0.7.2",
    "web3": "^1.3.0"
  },
  "devDependencies": {
    "ethereum-waffle": "^3.1.1",
    "prettier": "^2.1.2",
    "prettier-plugin-solidity": "^1.0.0-alpha.58",
    "solc": "^0.7.2"
  }
}
